{
  "extends": [
    "web-recommended"
  ],
  "formatters": ["stylish"],
  "ignoredUrls": [
    {
      "domain": "code.cdn.mozilla.net",
      "hints": ["*"]
    },
    {
      "domain": "www.google-analytics.com",
      "hints": ["*"]
    }
  ],
  "hints": {
    "content-type": "off",
    "http-cache": "off",
    "http-compression": "off",
    "no-friendly-error-pages": "warning",
    "no-html-only-headers": "off",
    "sri": "off",
    "validate-set-cookie-header":  "off",
    "x-content-type-options": "off"
  }
}
