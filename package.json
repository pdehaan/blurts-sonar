{
  "name": "blurts-sonar",
  "version": "1.0.0",
  "author": "Moe Zilla",
  "dependencies": {
    "@sonarwhal/configuration-web-recommended": "6.1.0",
    "@sonarwhal/formatter-stylish": "2.0.4",
    "npm-run-all": "4.1.3",
    "sonarwhal": "1.11.2"
  },
  "homepage": "https://blurts-server.stage.mozaws.net",
  "keywords": [
    "sonar",
    "scan"
  ],
  "license": "MPL-2.0",
  "scripts": {
    "scan": "npm-run-all scan:*",
    "scan:breach": "sonarwhal $npm_package_homepage/?breach=Adobe",
